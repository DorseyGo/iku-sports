  <view class="card article  margin-left-right-24rpx radius border-2rpx margin-top-10rpx">
    <view class="iku-item">
      <view class="title">
        <view class="text-cut">教学风采</view>
      </view>
      
      <view class="content grid col-2 no-border">
        <navigator url="../teaching-style/teaching-style?styleId={{item.id}}" class="padding-bottom-20rpx padding-10rpx" wx:for="{{teachingStyles}}" wx:key="id">
          <image src="{{item.cover}}" mode="aspectFill"/>
          <text class="text-content block">{{item.title}}</text>
          <view class="flex text-normal margin-top-10rpx">
            <view class="tag round bg-orange" wx:for="{{item.labels}}" wx:key="id" wx:for-item="label">{{label.name}}</view>
          </view>
        </navigator>
      </view>

    </view>    
    
  </view>
  
</scroll-view>