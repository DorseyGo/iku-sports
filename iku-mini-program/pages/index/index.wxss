.screen-swiper {
  min-height: 268rpx;
  margin: 0rpx 30rpx 0rpx;
}

.screen-swiper image {
  height: 100%;
  width: 100%;
  display: block;
  margin: 0;
  pointer-events: none;
}

.card {
  width: 100%;
  min-height: 424rpx;
  margin: 30rpx 0rpx 0rpx;
  border-radius: 52rpx 52rpx 0rpx 0rpx;
  background: rgba(25, 25, 25, 1);
}

.slide {
  max-width: 500rpx;
  display: inline-block;
  position: relative;
}

.slide .top-img {
  height: 180rpx;
  width: 180rpx;
  box-sizing: border-box;
  margin-left: 36rpx;
  border: 2rpx solid #ccc;
  border-radius: 12rpx;
  position: absolute;
  z-index: 5;
}

.slide .top-img image {
  width: 100%;
  height: 100%;
}

.slide .bottom-img {
  margin-top: 60rpx;
}

.slide .bottom-img image {
  max-height: 362rpx;
  max-width: 500rpx;
}

.content {
  position: absolute;
  z-index: 5;
  top: 180rpx;
  padding: 4rpx 0rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 460rpx;
}

.content .action image {
  height: 80rpx;
  width: 88rpx;
}

.bottom {
  position: absolute;
  z-index: 5;
  bottom: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin-bottom: 18rpx; */
  width: 430rpx;
}

.slide .content-box {
  width: 100%;
  height: 168rpx;
}