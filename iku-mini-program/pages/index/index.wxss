.screen-swiper {
  min-height: 268rpx;
  margin: 0rpx 30rpx 0rpx;
}

.screen-swiper image {
  height: 100%;
  width: 100%;
  display: block;
  margin: 0;
  pointer-events: none;
}

.card {
  width: 100%;
  min-height: 424rpx;
  margin: 30rpx 0rpx 0rpx;
  border-radius: 52rpx 52rpx 0rpx 0rpx;
  background: rgba(25, 25, 25, 1);
}

.slide {
  max-width: 500rpx;
}

.slide .top-img {
  height: 180rpx;
  width: 180rpx;
  box-sizing: border-box;
  margin-top: -36rpx;
  margin-left: 36rpx;
  border: 2rpx solid #ccc;
  border-radius: 12rpx;
  position: absolute;
  z-index: 5;
}

.slide .top-img image {
  width: 100%;
  height: 100%;
}

.slide .bottom-img {
  margin-top: 60rpx;
}

.slide .bottom-img image {
  max-height: 362rpx;
  max-width: 500rpx;
}

.content {
  position: absolute;
  z-index: 5;
  top: 210rpx;
  padding: 10rpx 0rpx;
  border-bottom: 1rpx solid var(--white);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 360rpx;
}

.content .action image {
  height: 40rpx;
  width: 44rpx;
}

.bottom {
  position: absolute;
  z-index: 5;
  bottom: 38rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}