.screen-swiper {
  margin: 10rpx 24rpx;
  min-height: 268rpx;
}

.screen-swiper swiper-item {
  border-radius: 10rpx;
}

.screen-swiper image {
  height: 100%;
  width: 100%;
  display: block;
  margin: 0;
  pointer-events: none;
}

.slide {
  max-width: 500rpx;
  display: inline-block;
  position: relative;
}

.slide .top-img {
  height: 180rpx;
  width: 180rpx;
  box-sizing: border-box;
  margin-left: 36rpx;
  border: 2rpx solid #ccc;
  border-radius: 12rpx;
  position: absolute;
  z-index: 5;
}

.slide .top-img image {
  width: 100%;
  height: 100%;
}

.slide .bottom-img {
  margin-top: 60rpx;
}

.slide .bottom-img image {
  max-height: 362rpx;
  max-width: 500rpx;
}

.bottom {
  position: absolute;
  z-index: 5;
  bottom: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin-bottom: 18rpx; */
  width: 430rpx;
}

.slide .content-box {
  width: 100%;
  height: 168rpx;
}