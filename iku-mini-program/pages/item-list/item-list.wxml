<!--pages/item-list/item-list.wxml-->
<view>
  <view>
    <text>推广活动区域</text>
  </view>

  <view class="goods_item_container">
    <block>
      <navigator class="goods_item" 
        wx:for="{{goodsList}}"  
        wx:key="id"
      >
        <!-- 左侧图片容器 -->
        <view class="goods_img_wrap">
          <image mode="widthFix" src="{{item.smallLogo ? item.smallLogo : '../../images/default_goods_img.jpg'}}"></image>
        </view>

        <!-- 右侧商品容器 -->
        <view class="goods_info_wrap">
          <view class="goods_name">{{item.name}}</view>
          <view class="goods_price">
            ￥{{item.price}}
            <text class="goods_price_dash">￥{{item.markingPrice}}</text>
          </view>
          <view class="sold_info">
            月售135
            <!--<image></image>-->
          </view>
        </view>
      </navigator>
    </block>

    <view class="nodata" wx:if="{{!hasNextPage}}">
      没有更多数据了
    </view>
  </view>
</view>
