<view class="container">
    <view class="header-img">
        <image class="cover" src="{{coach.headingImgUrl}}" mode="aspectFill" />
        <view class="thumbnail">
            <image src="{{coach.headingImgUrl}}" mode="aspectFill" />
        </view>
    </view>

    <view class="iku-head">
        <view class="action text-xl text-white mg-left-xl">{{coach.name}}</view>
        <view class="action margin-right-40rpx">
            <view class="favourite text-normal">
                关注
            </view>
        </view>
    </view>
    <view class="iku-title">
        <view class="action text-sm-26rpx mg-left-xl text-light-white">
            {{coach.gender == 'M' ? '男' : '女'}} <text>|</text> {{coach.title}}
        </view>
    </view>
    <view class="iku-info">
        <view class="action text-normal text-light-white">
            {{coach.introduce}}
        </view>
    </view>

    <view class="empty"></view>

    <view class="bar">
      <view class="action text-white">
        <text class="icon-titles text-yellow">|</text>课程
      </view>
    </view>

    <scroll-view class="course-list">
        <navigator wx:for="{{classes}}" wx:key="id" url="../classes/detail/details?id={{item.id}}">
            <view class="classes"> 
                <view class="class-image" style="background-image: url('{{item.cover}}')"></view>
                <view class="class-info">
                    <text class="class-title">{{item.title}}</text>
                    <text class="class-intr">{{item.content}}</text>
                    <view class="class-v">
                        <text class="text-sz">51</text>
                        <text class="text-szb">课时</text>
                        <text class="text-sz">{{item.watches}}</text>
                        <text class="text-szb">人已学习</text>
                    </view>
                </view>
            </view>
        </navigator>
    </scroll-view>   
</view>
