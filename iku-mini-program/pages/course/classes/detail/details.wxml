<view class="video-dit">

    <!-- <video class="video" src="{{class.videoUrl}}"
        custom-cache="{{false}}" controls="{{true}}" show-muted-btn="{{true}}"
       ></video> -->

    <video class="video" src="http://localhost:9080/static/video/1586663251730963.mp4" 
        custom-cache="{{false}}" controls="{{true}}" show-muted-btn="{{true}}" bindtap="setWatches"
       ></video>
</view>
<scroll-view>
    <view class="video-information">
        <view class="view_num text-yellow text-lg">
            观看人次：
            <text>{{class.watches}}</text>
        </view>
        <view class="colleged text-yellow text-lg">收藏</view>
    </view>
    <view class="description">
        <view class="title text-xl text-white  text-cut">{{class.title}}</view>
        <text class="comment text-white text-normal">
            {{class.content}}
            </text>
    </view>
</scroll-view>