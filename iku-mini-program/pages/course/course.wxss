/* pages/course/course.wxss */
.slides {
    height: 380rpx;
    background-color: aquamarine;
}

.slides image {
    height: 100%;
    width: 100%;
}

/* nav */
view.nav {
    padding: 24rpx;
    display: flex;
    flex-direction: row;
    font-size: 32rpx;
}

view.nav text {
    flex: 1;
    font-weight: bold;
}

view.nav navigator text {
    width: 128rpx;
    font-size: 26rpx;
    font-weight: normal;
}

/* promotion */
.intro .grids, .promotion .grids {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    height: 100%;
    padding: 12rpx;
}

.intro .grids .item, .promotion .grids .item {
    width: 50%;
    height: 288rpx;
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    padding: 12rpx;
}

.intro .grids .item .elem, .promotion .grids .item .elem {
    width: 100%;
    height: 100%;
    background-color: #eee;

    display: flex;
    flex-direction: row;
}

.intro .grids .item .info, .promotion .grids .item .info {
    flex: 1;

    display: flex;
    flex-direction: column;
    padding: 8rpx;
}

.intro .grids .item .info .title, .promotion .grids .item .info .title,
.popularity .tabs .item .elem .totals, .popularity .tabs .item .elem .title {
    flex: 1;
}

.intro .grids .item .info .brief, .promotion .grids .item .info .brief {
    height: 36rpx;
    font-size: 24rpx;
    color: #888;
    padding: 5rpx;
}

.intro .grids .item image, .promotion .grids .item image {
    width: 100rpx;
    height: 100%;
}

/* for popularity */
.popularity .tabs {
    display: flex;
    flex-direction: column;
    padding: 24rpx;
}

.popularity .tabs .item {
    height: 288rpx;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.popularity .tabs .item .elem {
    width: 50%;
    height: 100%;
    box-sizing: border-box;
    font-size: 24rpx;
 
    display: flex;
    flex-direction: column;
}

.popularity .tabs .item .elem .info {
    flex: 1;
    background-color: #eee;
    height: 100rpx;

    display: flex;
    flex-direction: row;
}

.popularity .tabs .item .elem .info text {
    width: 128rpx;
}

.popularity .tabs .item .elem .info image {
    flex: 1;
    height: 100%;
}

.popularity .tabs .item .elem .title {
    padding: 36rpx 24rpx;
}

.popularity .tabs .item .elem .badge image {
    height: 36rpx;
    width: 36rpx;
}

.popularity .tabs .item .elem .brief {
    height: 36rpx;
    font-size: 24rpx;
    color: #888;
    padding: 5rpx 36rpx;

    display: flex;
    flex-direction: row;
}

.popularity .tabs .item .elem .brief .vip, .popularity .tabs .item .elem .badge {
    color: red;
    font-weight: bold;
}

.popularity .tabs .item .elem .brief .vip {
    width: 72rpx;
 }