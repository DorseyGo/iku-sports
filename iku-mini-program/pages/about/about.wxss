
.person-line {
  width: calc(100% - 90rpx );
  height: 1px;
  background: rgb(172, 170, 170);
  margin-left: 90rpx;
}

.line-1px{
  width: 100%;
  height: 1px;
  margin-top: 1%;
  background: rgb(211, 211, 211);
}
.line{
  width: 100%;
  height: 5px;
  background: rgb(211, 211, 211);
}
.head {
  display: flex;
  flex-direction: row;
}

.head image {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.head button {
  margin-left: 0rpx;
  border: 0rpx;
  color: #000;
  font-weight: normal;
  margin-top: 35rpx;
}

.head .username {
  color: #000;
  font-weight: normal;
  margin-top: 45rpx;
}

.section {
  width: 100%;
  height: 180rpx;
  text-align: center;
  margin-top: 40rpx;
}
 
/* 轮播视图 */
 
.scroll_view {
  height: 430rpx;
  display: inline-block;
  width: 90%;
  /* white-space: nowrap; */
  white-space: nowrap;
}
 
/* 轮播图片内容视图 */
 
.cont {
  width: 250rpx;
  height: 430rpx;
  margin-right: -5rpx;
  display: inline-block;
  margin-left: 5rpx;
}
 
/* 轮播图片大小 */
 
.cont_img {
  width: 200rpx;
  border-radius: 10rpx;
  height:  120rpx;
  display: block;
}
 
/* 轮播文本 */
 
.cont .content {
  width: 200rpx;
  height: 130rpx;
}
 
/* 标题昵称 */
 
.cont_name {
  margin-top: 20rpx;
  display: -webkit-box;
  font-size: 28rpx;
  text-align: center;
  color: var(--dark-gray);
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: pre-line;
}
 
/* title */
 
.cont_title {
  width: 100%;
  height: 40rpx;
  font-size: 11px;
  color:#000;
}
 
.area {
  float: left;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.margin-top-2-percent {
  margin-top: 2%;
}
.margin-top-4-percent {
    margin-top: 4%;
  }

/*
    功能区域图片大小
*/
.function-img-size {
    width: 50rpx;
    height: 50rpx;
}