<view class="container">
    <view class="about mg-left-xl margin-top-22rpx">
        <view class="iku-item">
            <image class="round sm" src="{{user.avatarUrl}}" mode="aspectFill" />
            <view class="content">
                <view class="text-white text-xl">{{user.nickName}}</view>
                <view class="text-sm-26rpx text-dark-gray">{{user.telephone}}</view>
            </view>
        </view>

        <view class="iku-item flex top-border-dark-gray text-white text-sm-26rpx">
            <view class="item flex-sub">
                <text class="text-normal">{{user.numCourses}}</text>
                <text class="text-dark-gray">近期预约课程</text>
            </view>
            <view class="item flex-sub">
                <text class="text-normal">{{user.numAttentions}}</text>
                <text class="text-dark-gray">我的关注</text>
            </view>
        </view>
    </view>
    
    <view class="flex text-center tab mg-left-16rpx margin-top-lg text-dark-gray text-sm-30rpx">
        <view class="tab-item {{showLearned ? 'cur text-white': ''}}" index= 1 bindtap="toggleLearned">已学课程</view>
        <view class="tab-item {{showLearned ? '' : 'cur text-white'}}" index = 2 bindtap="toggleLearned">收藏课程</view>
    </view>
    
    
    
    
    <view class="iku-list margin-top-22rpx">
        <view class="list-item">
            <image class="item-image" src="../../images/清单.png" />
            <text class="item-text">我的订单</text> 
           <!--<image class="item-left-image" src="../../images/箭头.png" />
           !-->
        </view>
        <view class="person-line"></view>
        <view class="list-item">
            <image class="item-image" src="../../images/用户.png" />
            <text class="item-text">我的帖子</text> 
        </view>
        <view class="person-line"></view>
        <view class="list-item">
            <image class="item-image" src="../../images/重要提示.png" />
            <text class="item-text">反馈建议</text> 
        </view>
        <view class="person-line"></view>
        <view class="list-item">
            <image class="item-image" src="../../images/设置.png" />
            <text class="item-text">设置</text> 
        </view>
    </view>
</view>