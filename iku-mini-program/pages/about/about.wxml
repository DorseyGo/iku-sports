<view class="container">
    <view class="card margin-left-right-24rpx radius border-2rpx ">
        
        <view class=" head ">
            <image mode="aspectFit" src="{{!userInfo.nickName ? '../../images/grey_head.jpg' : userInfo.avatarUrl }}"></image>
            <button wx:if="{{!userInfo.nickName}}" plain size="mini" open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">登录</button>
            <text class="username">{{userInfo.nickName}}</text>
        </view>
        <view class="line-1px"></view>
            <view class="iku-list-height-120 grid-2 col-4 no-border margin-left-right-24rpx radius margin-top-2-percent">
                <navigator class="iku-item-flex flex-column" url="../course/course">
                    <text class="margin-top-10rpx">23</text>
                    <text class="text-normal top-item-text text-dark-gray margin-top-10rpx">在学</text>
                </navigator>
                <navigator class="iku-item-flex flex-column" >
                    <text class="margin-top-10rpx">25</text>
                    <text class="text-normal top-item-text text-dark-gray margin-top-10rpx">收藏</text>
                </navigator>
                <navigator class="iku-item-flex flex-column" url="../undetermined/undetermined">
                    <text class="margin-top-10rpx">0</text>
                    <text class="text-normal top-item-text text-dark-gray margin-top-10rpx">待定</text>
                </navigator>
                <navigator class="iku-item-flex flex-column" >
                    <text class="margin-top-10rpx">40</text>
                    <text class="text-normal top-item-text text-dark-gray margin-top-10rpx">打卡次数</text>
                </navigator>
            </view>
    </view>
    
    <view class="card margin-left-right-24rpx radius border-2rpx margin-top-2-percent">
        <view class="iku-list-height-120 grid-2 col-3  no-border margin-left-right-24rpx radius margin-top-2-percent">
            <navigator class="iku-item-flex flex-column" url="../order/order">
                <image class="function-img-size" src="../../images/list.png" />
                <text class="text-normal text-dark-gray margin-top-10rpx">我的订单</text>
            </navigator>
            <navigator class="iku-item-flex flex-column" url="../appoint/appoint">
                <image class="function-img-size" src="../../images/apponitment.png" />
                <text class="text-normal text-dark-gray margin-top-10rpx">课程预约</text>
            </navigator>
            <navigator class="iku-item-flex flex-column" >
                <image class="function-img-size"  src="../../images/invitation.png" />
                <text class="text-normal text-dark-gray margin-top-10rpx">帖子管理</text>
            </navigator>
        </view>
        <view class="iku-list-height-120 grid-2 col-3  no-border margin-left-right-24rpx radius">
            
            <navigator class="iku-item-flex flex-column" url="../feedback/feedback">
                <image class="function-img-size"  src="../../images/feedback.png" />
                <text class="text-normal text-dark-gray margin-top-10rpx">反馈建议</text>
            </navigator>
            <navigator class="iku-item-flex flex-column" url="../undetermined/undetermined">
                <image class="function-img-size" src="../../images/setup.png" />
                <text class="text-normal text-dark-gray margin-top-10rpx">设置</text>
            </navigator>
            <navigator class="iku-item-flex flex-column" url="../undetermined/undetermined">
                <image class="function-img-size" src="../../images/more.png" />
                <text class="text-normal text-dark-gray margin-top-10rpx">更多</text>
            </navigator>
        </view>
    </view>
    <view class="card  margin-left-right-24rpx radius border-2rpx margin-top-2-percent">
        <view class=" mg-left-16rpx flex text-dark-gray text-sm-30rpx tab-item margin-top-4-percent text-dark-gray">
            <text>已学课程</text>
            <navigator  url="../course/course" class="margin-left-70-percent">更多</navigator>          
        </view>
        <view class="line-1px margin-top-"></view>

        <view class="section text-dark-gray">
        <scroll-view class="scroll_view" scroll-x="true">
            <view class="cont" wx:for="{{list}}" wx:key="name">
            <image src="{{item.url}}"class="cont_img"/>
            <view class="content">
                <view  class="cont_name" >{{item.name}}</view>            
            </view>
            </view>
        </scroll-view>
        </view>  
    </view>  
    
</view>