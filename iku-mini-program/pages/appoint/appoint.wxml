<!--pages/appoint/appoint.wxml-->
<view class="container">
  <view wx:if="{{true}}">
    <view class="card article margin-left-right-24rpx radius border-2rpx margin-top-10rpx">
			<view class="iku-item">
				<view class="title">
					<view class="text-cut">基础篮球课</view>
				</view>
				<view class="content">
					<image src="../../images/basketball_1.png" mode="aspectFill" />
					<view class="desc">
            <view class="text-content">课程名：<text class="text-red">运球</text></view>
						<view class="text-content">课程：第{{item.numClasses}} 节</view>
						<view class="text-content flex">
							<button class="iku-btn bg-red" size="mini" loading="{{loading}}" disabled="{{disabled}}" bindtap="onTap">
							预约
							</button>
						</view>
					</view>
				</view>
			</view>
		</view>
  </view>
</view>
