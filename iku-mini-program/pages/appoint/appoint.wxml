<!--pages/appoint/appoint.wxml-->
<view class="container">
  <view wx:if="{{hasPurchasedAppointCourse}}">
    <view class="card article margin-left-right-24rpx radius border-2rpx margin-top-10rpx"
					wx:for="{{appointCourseInfo}}" wx:key="courseId"
		>
			<view class="iku-item">
				<view class="title">
					<view class="text-cut">{{item.courseName}}</view>
				</view>
				<view class="content">
					<image src="../../images/basketball_{{item.courseLevel}}.png" mode="aspectFill" />
					<view class="desc">
						<view class="text-content flex">
							<view class="flex-sub">完成 {{item.studiedClass}} 节</view>
							<view>总课时 {{item.totalClass}} 节</view>
						</view>
						<view class="text-content course_name">
							课程内容：<text class="course_label text-red">运球</text>
							<text class="course_label text-red">投篮</text>
						</view>
						<view class="course_evaluate"><text>好评度95%</text></view>
						<view class="text-content flex">
							<view class="flex-sub"></view>
							<navigator class="couse_appoint_detail" url="./course-plan/course-plan">
								{{'>>'}}预约课时详情
							</navigator>
								<button wx:if="{{hasAppoint}}" class="iku-btn bg-red" size="mini" loading="{{loading}}" bindtap="cacelAppoint">取消预约</button>
						</view>
					</view>
				</view>
			</view>
		</view>
  </view>
	<view wx:else class="center">
		<view>
			<image mode="aspectFill" src="../../images/order.png"></image>
		</view>
	</view>
</view>
