<!--pages/appoint/course-plan/course-plan.wxml-->
<view class="container">
  <view wx:if="{{true}}">
    <view class="card article margin-left-right-24rpx radius border-2rpx margin-top-10rpx">
			<view class="iku-item" wx:key="1000">
				<view class="content">
					<view class="desc">
            <view class="text-content course_name">
							课程内容：<text class="text-red">运球</text>
						</view>
            <view class="text-content flex">
              <view class="flex-sub">教练：<text>harden</text></view>
						  <view>课时：第 <text class="text-red">3</text> 节</view>
            </view>
            <view class="text-content flex">
              <view class="flex-sub">上课时间：<text class="text-red">2020-07-05 10:30</text>
              </view>
              <view>时长：0.5小时</view>
            </view>
            <view class="text-content">场地：<text>风雨球场</text></view>
            <view class="text-content flex">
              <view class="flex-sub">已预约：<text class="text-red">30</text></view>
              <view>剩余：<text class="text-red">5</text></view>
            </view>
						<view class="text-content flex">
              <view class="flex-sub"></view>
							<button wx:if="{{!hasAppoint}}" class="iku-btn bg-red" size="mini" loading="{{loading}}" bindtap="navigateCoursePlan" data-courseId="1000" data-courseClassId="5">预约</button>
							<button wx:if="{{hasAppoint}}" class="iku-btn bg-red" size="mini" loading="{{loading}}" bindtap="cacelAppoint">取消预约</button>
						</view>
					</view>
				</view>
			</view>
		</view>
  </view>
</view>
