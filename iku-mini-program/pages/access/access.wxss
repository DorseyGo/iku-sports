page {
    background-color: #fff;
}

.access-v {
    display: flex;
    height: 100vh;
    flex-direction: column;
}

.about_my {
    display: flex;
}

.about_my image {
    display: flex;
    height: 180rpx;
    width: 180rpx;
    border-radius: 50%;
    border: 8rpx;
    align-items: center;
    margin-left: 40%;
    margin-top: 30%;
    margin-bottom: 50rpx;
}

.tx {
    display: flex;
    margin-top: 40rpx;
    margin-left: 30%;
    margin-right: 20%;
    margin-bottom: 80rpx;
    font-size: 28rpx;
    color: dimgray;
}

.access {
    display: table;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    background-color: #fff;
    border: 1rpx solid #0f0;
    border-radius: 50rpx;
}

.access text {
    vertical-align: middle;
    display: table-cell;
    color: #0f0;
    font-size: 30rpx;
}