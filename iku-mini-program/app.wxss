/** tab bar */
.ik-bar {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
}

.ik-bar.tab-bar {
  padding: 0;
  height: calc(100rpx + env(safe-area-inset-bottom) / 2);
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}

.ik-bar.tab-bar .submit:last-child {
  flex: 2.6;
}

.ik-bar.tab-bar .submit {
  align-items: center;
  display: flex;
  justify-content: center;
  text-align: center;
  position: relative;
  flex: 2;
  align-self: stretch;
}

.ik-bar.tab-bar.shop .action {
  width: 140rpx;
  flex: initial;
}

.ik-bar .action {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  max-width: 100%;
}

.ik-bar.tab-bar .action {
  font-size: 22rpx;
  position: relative;
  flex: 1;
  text-align: center;
