page {
 --background-color: rgba(25,25,25,1);
 --white: #FFFFFF;
 --dark-gray: #666666;
 --black: #000;
 --orange: #f37b1d;
 --yellow: #ffc600;
 --red: #FF0000;
 --light-white: #F2F2F2; 
}

.container, scroll-view.list {
  height: 100vh;
  background-color: var(--light-white);
}

swiper, view {
  box-sizing: border-box;
}

swiper[class*="-dot"] .wx-swiper-dots {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
}

swiper.square-dot .wx-swiper-dot {
  background-color: var(--white);
  opacity: 0.4;
  width: 10rpx;
  height: 10rpx;
  border-radius: 20rpx;
  margin: 0 8rpx !important;
}

swiper.square-dot .wx-swiper-dot.wx-swiper-dot-active {
  opacity: 1;
  width: 30rpx;
}

swiper-item {
  position: relative;
}

swiper-item .bottom-mask::after {
  content: "";
  border-radius: inherit;
	width: 20%;
	height: 47rpx;
	display: block;
	background-color: rgba(0, 0, 0, 0.3);
	position: absolute;
	left: 0;
	bottom: 0;
}

.nav {
  white-space: nowrap;
  font-size: 34rpx;
}

.nav .nav-item {
  height: 60rpx;
  display: inline-block;
  line-height: 60rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
}

.nav .nav-lg-item {
  min-height: 362rpx;
  width: 500rpx;
}

.nav .nav-item.current {
  border-bottom: 2rpx solid var(--yellow);
}

/** text */
.text-dark-gray{
  color: var(--dark-gray);
}

.text-white {
  color: var(--white);
}

.text-black {
  color: var(--black);
}

.text-xl {
  font-size: 36rpx;
  line-height: 50rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
}

.text-lg {
  font-size: 32rpx;
  font-weight: 666;
}

.text-sm {
  font-size: 20rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  line-height: 28rpx;
}

.text-xs {
  font-size: 18rpx;
}

.text-normal {
  font-size: 24rpx;
  line-height: 34rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
}

.text-yellow {
  color: var(--yellow);
}

.text-light-white {
  color: var(--light-white);
}

.text-sm-26rpx {
  font-size: 26rpx;
  line-height: 36rpx;
