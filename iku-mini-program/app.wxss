/** grid */
.grid {
  display: flex;
  flex-wrap: wrap;
}

.grid.col-2 navigator {
  width: 50%;
}

.iku-list.grid {
  background-color: var(--white);
  text-align: center;
  min-height: 120rpx;
}

.iku-list.grid.no-border {
  padding: 10rpx 10rpx;
}

.iku-list.grid.no-border .iku-item {
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}

.iku-list.grid .iku-item {
  position: relative;
  display: flex;
  padding: 20rpx 0 30rpx;
  transition-duration: 0s;
  flex-direction: column;
  background-color: var(--white);
}

.iku-list.grid .iku-item image {
  height: 90rpx;
  width: 90rpx;
}

.border-2rpx {
  border: 1rpx solid rgba(225, 225, 225, 0.6);
}

/* card */
.card {
  min-height: 340rpx;
  background-color: var(--white);
  display: block;
  overflow: hidden;
}

.card.nav {
  min-height: 66rpx;
  display: flex;
}

.card .iku-item {
  display: block;
  background-color: var(--white);
  overflow: hidden;
  border-radius: 10rpx;
  margin: 24rpx;
}

.card.article .iku-item .title {
  font-size: 30rpx;
  font-weight: 900;
  color: var(--black);
  line-height: 100rpx;
  padding: 0 30rpx;
