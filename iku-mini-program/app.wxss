page {
 --background-color: #252626;
 --white: #FFFFFF;
 --dark-gray: #666666;
 --black: #000;
 --orange: #f37b1d;
 --yellow: #ffc600;
}

.container {
  height: 100vh;
  background-color: var(--background-color);
}

swiper, view {
  box-sizing: border-box;
}

swiper[class*="-dot"] .wx-swiper-dots {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
}

swiper.square-dot .wx-swiper-dot {
  background-color: var(--white);
  opacity: 0.4;
  width: 10rpx;
  height: 10rpx;
  border-radius: 20rpx;
  margin: 0 8rpx !important;
}

swiper.square-dot .wx-swiper-dot.wx-swiper-dot-active {
  opacity: 1;
  width: 30rpx;
}

.nav {
  white-space: nowrap;
  font-size: 24rpx;
}

.nav .nav-item {
  height: 60rpx;
  display: inline-block;
  line-height: 60rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
}

.nav .nav-lg-item {
  min-height: 362rpx;
  width: 500rpx;
}

.nav .nav-item.current {
  border-bottom: 2rpx solid;
}

.text-dark-gray{
  color: var(--dark-gray);
}

.text-white {
  color: var(--white);
}

.text-black {
  color: var(--black);
}

.text-xl {
  font-size: 36rpx;
}

.text-lg {
  font-size: 32rpx;
  font-weight: 666;
}

.text-sm {
  font-size: 20rpx;
}

.text-xs {
  font-size: 18rpx;
}

.text-normal {
  font-size: 24rpx;
}

.text-yellow {
  color: var(--yellow);
}

.text-mask {
  position: absolute;
  z-index: 5;
}

.bg-image {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  margin: 20rpx 30rpx 0rpx;
  border-radius: 16rpx;
  height: 200rpx;
}

.bg-mask {
  background-color: var(--black);
  position: relative;
}

.bg-mask::after {
	content: "";
	border-radius: inherit;
	width: 100%;
	height: 100%;
	display: block;
	background-color: rgba(0, 0, 0, 0.4);
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
}

.bg-mask view {
  z-index: 5;
  position: relative;
}

.padding-xl {
  padding: 20rpx;
}

.padding-top {
  padding-top: 62rpx;
}

.bar {
  margin-top: 30rpx;
  position: relative;
  min-height: 30rpx;
  align-items: center;
  justify-content: space-between;
}

.bar .action:first-child {
  margin-left: 30rpx;
  font-size: 24rpx;
}

.bar .action>text[class*="icon-"] {
  margin-left: -0.3em;
  margin-right: 0.3em;
}

.scroll-slides {
  min-height: 268rpx;
}

.mg-left {
  margin-left: 30rpx;
}

.mg-left-xl {
  margin-left: 36rpx;
}

.width-half {
  width: 50%;
}

.mg-left-half {
  margin-left: 50%;
}